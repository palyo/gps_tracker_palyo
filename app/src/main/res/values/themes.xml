<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Tracker" parent="Theme.Space">
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.Tracker.Dialog" parent="Theme.Space.Dialog">
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.Tracker.BottomNavigationView">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="itemActiveIndicatorStyle">@style/Theme.Space.Indicator</item>
        <item name="itemIconSize">@dimen/_18sdp</item>
        <item name="itemIconTint">@color/ic_navigation_selector</item>
        <item name="itemPaddingBottom">@dimen/_8sdp</item>
        <item name="itemRippleColor">@color/colorWhite16</item>
        <item name="itemTextColor">@color/ic_navigation_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Theme.Tracker.TextInputLayout" parent="TextInputLayout">
        <item name="boxBackgroundColor">@color/colorCardBackground</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeWidth">@dimen/_0sdp</item>
        <item name="boxStrokeWidthFocused">@dimen/_0sdp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/colorTextOpacity</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_24sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_24sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_24sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_24sdp</item>
    </style>

    <style name="TextAppearance.Space.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>