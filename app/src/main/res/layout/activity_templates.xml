<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.updates.TemplatesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top_bar"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="@dimen/_0sdp"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:theme="@style/Theme.Space.AppBarOverlay"
            app:elevation="@dimen/_0sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@null"
                android:theme="@style/Theme.Tracker"
                app:contentInsetStart="@dimen/_12sdp"
                app:navigationIcon="@drawable/ic_navigation_back"
                app:navigationIconTint="@color/colorIcon"
                app:popupTheme="@style/Theme.Space.PopupMenu"
                app:title="@string/title_templates"
                app:titleTextAppearance="@style/TextAppearance.Space.TitleSmall"
                app:titleTextColor="@color/colorText">

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="@dimen/_0sdp"
        android:layout_height="@dimen/_0sdp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_top_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_12sdp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/template_default"
                android:layout_width="@dimen/_0sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_bg_rounded_12sdp"
                app:cardBackgroundColor="@color/colorCardBackground"
                app:contentPadding="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_default"
                        style="@style/TextSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Default"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/is_selected"
                        style="@style/Theme.Space.CheckBox"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:clickable="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_map_data_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/colorBlack24"
                        android:clipToOutline="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_default">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/map_card_view"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_0sdp"
                            app:cardBackgroundColor="@color/colorTransparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <fragment
                                android:id="@+id/map_fragment_"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </androidx.cardview.widget.CardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_location_details"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_0sdp"
                            android:paddingHorizontal="@dimen/_8sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/map_card_view"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/text_address"
                                style="@style/TextSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Address"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toTopOf="@+id/text_latitude"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/text_latitude"
                                style="@style/TextSemiBold"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center_vertical"
                                android:text="Latitude"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toTopOf="@+id/text_latitude_value"
                                app:layout_constraintEnd_toStartOf="@+id/text_longitude"
                                app:layout_constraintStart_toStartOf="@id/text_address"
                                app:layout_constraintTop_toBottomOf="@+id/text_address" />

                            <TextView
                                android:id="@+id/text_longitude"
                                style="@style/TextSemiBold"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="Longitude"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/text_latitude"
                                app:layout_constraintTop_toTopOf="@+id/text_latitude" />

                            <TextView
                                android:id="@+id/text_latitude_value"
                                style="@style/TextRegular"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Latitude"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toTopOf="@+id/text_local_time"
                                app:layout_constraintEnd_toStartOf="@+id/text_longitude_value"
                                app:layout_constraintStart_toStartOf="@id/text_address"
                                app:layout_constraintTop_toBottomOf="@+id/text_latitude" />

                            <TextView
                                android:id="@+id/text_longitude_value"
                                style="@style/TextRegular"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Longitude"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/text_latitude_value"
                                app:layout_constraintTop_toTopOf="@+id/text_latitude_value" />

                            <TextView
                                android:id="@+id/text_local_time"
                                style="@style/TextMedium"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center_vertical"
                                android:text="Local:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toTopOf="@+id/text_gmt_time"
                                app:layout_constraintEnd_toStartOf="@+id/text_altitude"
                                app:layout_constraintStart_toStartOf="@id/text_address"
                                app:layout_constraintTop_toBottomOf="@+id/text_latitude_value" />

                            <TextView
                                android:id="@+id/text_altitude"
                                style="@style/TextMedium"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Altitude"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/text_local_time"
                                app:layout_constraintTop_toTopOf="@+id/text_local_time" />

                            <TextView
                                android:id="@+id/text_gmt_time"
                                style="@style/TextMedium"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:gravity="center_vertical"
                                android:text="GMT:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toTopOf="@+id/text_captured_by"
                                app:layout_constraintEnd_toStartOf="@+id/text_date"
                                app:layout_constraintStart_toStartOf="@id/text_address"
                                app:layout_constraintTop_toBottomOf="@+id/text_local_time" />

                            <TextView
                                android:id="@+id/text_date"
                                style="@style/TextMedium"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="Date"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/text_gmt_time"
                                app:layout_constraintTop_toTopOf="@+id/text_gmt_time" />

                            <TextView
                                android:id="@+id/text_captured_by"
                                style="@style/TextMedium"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:gravity="center_vertical"
                                android:text="Captured by"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_6ssp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/text_address"
                                app:layout_constraintTop_toBottomOf="@+id/text_gmt_time" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/template_classic"
                android:layout_width="@dimen/_0sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_bg_rounded_12sdp"
                app:cardBackgroundColor="@color/colorCardBackground"
                app:contentPadding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/template_default">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_classic"
                        style="@style/TextSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/is_selected_classic"
                        style="@style/Theme.Space.CheckBox"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:clickable="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_map_data_classic"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:clipToOutline="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_classic">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/map_card_view_classic"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_0sdp"
                            app:cardBackgroundColor="@color/colorTransparent"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <fragment
                                android:id="@+id/map_fragment_classic"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </androidx.cardview.widget.CardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_location_details_classic"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_0sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:background="@drawable/ic_bg_rounded_8sdp"
                            android:backgroundTint="@color/colorBlack24"
                            android:paddingHorizontal="@dimen/_8sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/map_card_view_classic"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/text_address_classic"
                                style="@style/TextSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Address"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toTopOf="@+id/text_latitude_classic"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/text_latitude_classic"
                                style="@style/TextSemiBold"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center_vertical"
                                android:text="Latitude"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toTopOf="@+id/text_latitude_value_classic"
                                app:layout_constraintEnd_toStartOf="@+id/text_longitude_classic"
                                app:layout_constraintStart_toStartOf="@id/text_address_classic"
                                app:layout_constraintTop_toBottomOf="@+id/text_address_classic" />

                            <TextView
                                android:id="@+id/text_longitude_classic"
                                style="@style/TextSemiBold"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:gravity="center_vertical"
                                android:text="Longitude"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/text_latitude_classic"
                                app:layout_constraintTop_toTopOf="@+id/text_latitude_classic" />

                            <TextView
                                android:id="@+id/text_latitude_value_classic"
                                style="@style/TextRegular"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Latitude"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toTopOf="@+id/text_local_time_classic"
                                app:layout_constraintEnd_toStartOf="@+id/text_longitude_value_classic"
                                app:layout_constraintStart_toStartOf="@id/text_address_classic"
                                app:layout_constraintTop_toBottomOf="@+id/text_latitude_classic" />

                            <TextView
                                android:id="@+id/text_longitude_value_classic"
                                style="@style/TextRegular"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Longitude"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/text_latitude_value_classic"
                                app:layout_constraintTop_toTopOf="@+id/text_latitude_value_classic" />

                            <TextView
                                android:id="@+id/text_local_time_classic"
                                style="@style/TextMedium"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:gravity="center_vertical"
                                android:text="Local:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toTopOf="@+id/text_gmt_time_classic"
                                app:layout_constraintEnd_toStartOf="@+id/text_altitude_classic"
                                app:layout_constraintStart_toStartOf="@id/text_address_classic"
                                app:layout_constraintTop_toBottomOf="@+id/text_latitude_value_classic" />

                            <TextView
                                android:id="@+id/text_altitude_classic"
                                style="@style/TextMedium"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Altitude"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/text_local_time_classic"
                                app:layout_constraintTop_toTopOf="@+id/text_local_time_classic" />

                            <TextView
                                android:id="@+id/text_gmt_time_classic"
                                style="@style/TextMedium"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:gravity="center_vertical"
                                android:text="GMT:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintBottom_toTopOf="@+id/text_captured_by_classic"
                                app:layout_constraintEnd_toStartOf="@+id/text_date_classic"
                                app:layout_constraintStart_toStartOf="@id/text_address_classic"
                                app:layout_constraintTop_toBottomOf="@+id/text_local_time_classic" />

                            <TextView
                                android:id="@+id/text_date_classic"
                                style="@style/TextMedium"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="Date"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/text_gmt_time_classic"
                                app:layout_constraintTop_toTopOf="@+id/text_gmt_time_classic" />

                            <TextView
                                android:id="@+id/text_captured_by_classic"
                                style="@style/TextMedium"
                                android:layout_width="@dimen/_0sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:gravity="center_vertical"
                                android:text="Captured by"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_6ssp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/text_address_classic"
                                app:layout_constraintTop_toBottomOf="@+id/text_gmt_time_classic" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/template_squarise"
                android:layout_width="@dimen/_0sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_bg_rounded_12sdp"
                app:cardBackgroundColor="@color/colorCardBackground"
                app:contentPadding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/template_classic">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_text_squarise"
                        style="@style/TextSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Squarise"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/is_selected_squarise"
                        style="@style/Theme.Space.CheckBox"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:clickable="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_map_data_squarise"
                        android:layout_width="@dimen/_0sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:clipToOutline="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_text_squarise">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/map_card_view_squarise"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_0sdp"
                            app:cardBackgroundColor="@color/colorTransparent"
                            app:cardCornerRadius="@dimen/_0sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <fragment
                                android:id="@+id/map_fragment_squarise"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </androidx.cardview.widget.CardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_location_details_squarise"
                            android:layout_width="@dimen/_0sdp"
                            android:layout_height="@dimen/_0sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:background="@color/colorBlack24"
                            android:paddingHorizontal="@dimen/_8sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
