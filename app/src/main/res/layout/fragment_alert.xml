<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".caller.frags.AlertFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/layout_row_item_reminder" />

    <TextView
        android:id="@+id/layout_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_reminders"
        android:textColor="@color/colorText"
        android:textSize="@dimen/_12sdp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add"
        style="@style/MaterialButtonTransparent"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/_20sdp"
        app:backgroundTint="@color/colorAccent"
        app:cornerRadius="@dimen/_8sdp"
        app:icon="@drawable/icon_add"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/_0sdp"
        app:iconSize="@dimen/_20sdp"
        app:iconTint="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/layout_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_close"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="match_parent"
                android:padding="@dimen/_11sdp"
                android:src="@drawable/ic_menu_close"
                app:tint="@color/colorBlack34" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_reminder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:gravity="start|center"
                android:hint="@string/create_new_reminder"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences|text"
                android:maxLines="1"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorTextOpacity"
                android:textSize="@dimen/_12sdp"
                app:fontFamily="@font/medium" />

            <ImageView
                android:id="@+id/button_save_reminder"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:padding="@dimen/_11sdp"
                android:src="@drawable/ic_done"
                app:tint="@color/colorAccent" />
        </LinearLayout>

        <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
            android:id="@+id/picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:fontFamily="@font/medium"
            app:picker_curved="true"
            app:picker_curvedMaxAngle="45"
            app:picker_cyclic="false"
            app:picker_dayCount="31"
            app:picker_displayDays="true"
            app:picker_itemSpacing="6dp"
            app:picker_mustBeOnFuture="true"
            app:picker_selectorColor="@android:color/transparent"
            app:picker_stepSizeHours="1"
            app:picker_stepSizeMinutes="1"
            app:picker_visibleItemCount="5" />

    </LinearLayout>

</FrameLayout>
