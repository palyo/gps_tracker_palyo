<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_rounded_sheet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="@dimen/_0sdp"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_24sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_12sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_permission"
                    style="@style/TextBold"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    android:text="Permission Required"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_permission_body"
                    style="@style/TextRegular"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:alpha="0.7"
                    android:text="You have forcefully denied phone state permission. Please open setting , go to permission and allow theme."
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_permission" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_permission_step_1"
                    style="@style/TextBold"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Tap permission"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_permission_body" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/declaration_image_1"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_permission_step_1"
                    app:srcCompat="@drawable/ic_permission_phone_declaration_1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_permission_step_2"
                    style="@style/TextBold"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Tap Phone"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/declaration_image_1" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/declaration_image_2"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_permission_step_2"
                    app:srcCompat="@drawable/ic_permission_phone_declaration_2" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_permission_step_3"
                    style="@style/TextBold"
                    android:layout_width="@dimen/_0sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Tap Allow"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/declaration_image_2" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/declaration_image_3"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_permission_step_3"
                    app:srcCompat="@drawable/ic_permission_phone_declaration_3" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_continue"
        style="@style/MaterialButtonAccent"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="Open Settings"
        app:cornerRadius="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>