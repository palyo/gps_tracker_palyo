<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_location"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bg_rounded_12sdp"
        android:backgroundTint="@color/colorCardBackground"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/map_card_location"
            android:layout_width="@dimen/_68sdp"
            android:layout_height="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorCardBackground"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_0sdp"
            app:contentPadding="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/colorTransparent"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_0sdp">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map_location"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_location_details"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="@dimen/_0sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/map_card_location"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_title_location"
                style="@style/TextSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Title"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toTopOf="@+id/text_address_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_address_location"
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Address"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toTopOf="@+id/text_latitude_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_title_location"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_latitude_location"
                style="@style/TextSemiBold"
                android:layout_width="@dimen/_0sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:text="Latitude"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toTopOf="@+id/text_latitude_location_value"
                app:layout_constraintEnd_toStartOf="@+id/text_longitude_location"
                app:layout_constraintStart_toStartOf="@id/text_address_location"
                app:layout_constraintTop_toBottomOf="@+id/text_address_location" />

            <TextView
                android:id="@+id/text_longitude_location"
                style="@style/TextSemiBold"
                android:layout_width="@dimen/_0sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Longitude"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_latitude_location"
                app:layout_constraintTop_toTopOf="@+id/text_latitude_location" />

            <TextView
                android:id="@+id/text_latitude_location_value"
                style="@style/TextRegular"
                android:layout_width="@dimen/_0sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Latitude"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text_longitude_location_value"
                app:layout_constraintStart_toStartOf="@id/text_address_location"
                app:layout_constraintTop_toBottomOf="@+id/text_latitude_location" />

            <TextView
                android:id="@+id/text_longitude_location_value"
                style="@style/TextRegular"
                android:layout_width="@dimen/_0sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Longitude"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_latitude_location_value"
                app:layout_constraintTop_toTopOf="@+id/text_latitude_location_value" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/is_check_location"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_button_checked" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>